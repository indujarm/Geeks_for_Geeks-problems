//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
class Solution {
  public:
    void sort012(vector<int>& arr) {
        // code here
        int s=0,m=0,e=arr.size()-1;
        while(m<=e)
        {
            if(arr[m]==0) 
            {
                swap(arr[m],arr[s]);
                m++;
                s++;
            }
            else if(arr[m ]==2)
            {
                swap(arr[m],arr[e]);
                e--;
            }
            else
            m++;
        }
        

    }
};

//{ Driver Code Starts.
int main() {

    int t;
    cin >> t;
    cin.ignore();
    while (t--) {

        vector<int> a;
        string input;
        int num;

        getline(cin, input);
        stringstream s2(input);
        while (s2 >> num) {
            a.push_back(num);
        }
        Solution ob;
        ob.sort012(a);

        int n = a.size();
        for (int i = 0; i < n; i++) {
            cout << a[i] << " ";
        }

        cout << endl;
    }
    return 0;
}

// } Driver Code Ends
